{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true
  },
  "monorepo": true,
  "root": ".",
  "projects": {
    "api-server": {
      "type": "application",
      "root": "apps/api-server",
      "entryFile": "main",
      "sourceRoot": "apps/api-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-server/tsconfig.app.json"
      }
    },
    "activity-worker": {
      "type": "application",
      "root": "apps/activity-worker",
      "entryFile": "main",
      "sourceRoot": "apps/activity-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/activity-worker/tsconfig.app.json"
      }
    },
    "sqs-client": {
      "type": "library",
      "root": "libs/sqs-client",
      "entryFile": "index",
      "sourceRoot": "libs/sqs-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/sqs-client/tsconfig.lib.json"
      }
    }
  }
}
